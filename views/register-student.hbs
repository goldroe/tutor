
{{> header}}
{{> sidebar}}

<section class="form-container">

   <form action="/register/student" method="post" enctype="multipart/form-data" onsubmit="return check_form(this);">
      <h3>register now</h3>

      <p>your first name <span>*</span></p>
      <input type="text" name="first_name" placeholder="enter your first name" required maxlength="50" class="box">

      <p>your last name <span>*</span></p>
      <input type="text" name="last_name" placeholder="enter your last name" required maxlength="50" class="box">

      <p>your email <span>*</span></p>
      <input type="email" name="email" placeholder="enter your email" required maxlength="50" class="box">

      <p>your password <span>*</span></p>
      <input type="password" name="pass"  maxlength="15" class="box" title="Password must be between 6 and 15 characters, including UPPER/lowercase and numbers" placeholder="enter your password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,15}" onchange="
         this.setCustomValidity(this.validity.patternMismatch ? this.title : '');
         if (this.checkValidity()) {
            form.c_pass.pattern = RegExp.escape(this.value);
         }
      ">

      <p>confirm password <span>*</span></p>
      <input type="password" name="c_pass" title="Please enter the same Password as above" placeholder="confirm your password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,15}" maxlength="20" class="box" onchange="
      this.setCustomValidity(this.validity.patternMismatch ? this.title : '');
      ">

      <p>select profile <span>*</span></p>
      <input type="file" accept="image/*" name="avatar" required class="box">

      <p>your about me <span>*</span></p>
      <textarea class="box input" rows="10" name="about_me" cols="50"></textarea>

      <input type="submit" value="register" name="register" class="btn">
   </form>

</section>