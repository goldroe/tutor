{{! Main Header}}
{{! variables: account, }}
<header class="header">
  <section class="flex">

    <a href="/" class="logo">Educa.</a>

    <div class="icons">
      <div id="menu-btn" class="fas fa-bars"></div>
      <div id="search-btn" class="fas fa-search"></div>
      <div id="user-btn" class="fas fa-user"></div>
      <div id="toggle-btn" class="fas fa-sun"></div>
    </div>

    <div class="profile">
      {{#if account}}
      <img src="/images/{{account.avatar}}" class="image" alt="">
      <h3 class="name">{{account.first_name}} {{account.last_name}}</h3>
      <p class="role">{{account.type}}</p>
      <a href="/account" class="btn">view profile</a>
      <div class="flex-btn">
        <a href="/logout" class="option-btn">logout</a>
      </div>  
      {{else}}
      <img src="/images/default.jpg" class="image" alt="">
      <h3 class="name">Guest</h3>
      <p class="role"></p>
      <div class="flex-btn">
        <a href="/login" class="option-btn">login</a>
        <a href="/register" class="option-btn">register</a>
      </div>      
      {{/if}}
    </div>

  </section>

</header>